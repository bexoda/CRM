@model CRM.Entities.Department

@{
    ViewData["Title"] = "Edit";
}




<div class="card bg-light-info shadow-none position-relative overflow-hidden">
    <div class="card-body px-4 py-3">
        <div class="row align-items-center">
            <div class="col-9">
                <h4 class="fw-semibold mb-8">Department Form</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a class="text-muted" asp-controller="Departments" asp-action="Index">Department</a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">Edit Department</li>
                    </ol>
                </nav>
            </div>
            <div class="col-3">
                <div class="text-center mb-n5">
                    <img src="../../dist/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">

    <div class="col-12">
        <div class="card">
            <div class="px-4 py-3 border-bottom">
                <h5 class="card-title fw-semibold mb-0">Edit Employee</h5>
            </div>
            <form asp-action="Edit">

                <div class="card-body p-4">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="CreatedDate" hidden />
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label asp-for="DepartmentName" class="form-label fw-semibold">Department Name</label>
                                <input type="text" class="form-control" id="exampleInputtext" asp-for="DepartmentName" placeholder="Name Here...">
                            </div>

                        </div>
                        <div class="col-12">
                            <div class="d-flex align-items-center gap-3">
                                <button class="btn btn-primary" type="submit">Submit</button>
                                <button class="btn btn-light-danger text-danger" asp-action="Index">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
