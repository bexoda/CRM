@model CRM.Entities.Department

@{
    ViewData["Title"] = "Delete";
}



<div class="card bg-light-info shadow-none position-relative overflow-hidden">
    <div class="card-body px-4 py-3">
        <div class="row align-items-center">
            <div class="col-9">
                <h4 class="fw-semibold mb-8">Department</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a class="text-muted" asp-controller="Departments" asp-action="Index">Department</a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">Delete Department</li>
                    </ol>
                </nav>
            </div>
            <div class="col-3">
                <div class="text-center mb-n5">
                    <img src="../../dist/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">

    <div class="col-12">
        <div class="card">
            <div class="px-4 py-3 border-bottom">
                <h5 class="card-title fw-semibold mb-0">Delete Department</h5>
            </div>
            <div>

                <div class="card-body p-4">

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label asp-for="DepartmentName" class="form-label fw-semibold">Department Name</label>
                                <input type="text" class="form-control" id="exampleInputtext" asp-for="DepartmentName" placeholder="Name Here..." disabled>
                            </div>
                            <div class="mb-4">
                                <label asp-for="CreatedDate" class="form-label fw-semibold">Created date</label>
                                <input type="datetime-local" class="form-control" id="exampleInputtext" asp-for="CreatedDate" disabled>
                            </div>
                            <div class="mb-4">
                                <label asp-for="UpdatedDate" class="form-label fw-semibold">Updated date</label>
                                <input type="datetime-local" class="form-control" id="exampleInputtext" asp-for="UpdatedDate" disabled>
                            </div>

                        </div>
                        <div class="col-12">
                            <form asp-action="Delete">
                                <div class="col-12">
                                    <div class="d-flex align-items-center gap-3">
                                        <input type="hidden" asp-for="Id" />
                                        <input type="submit" value="Delete" class="btn btn-danger" />

                                        <a class="btn btn-light-danger text-danger" asp-action="Index">Back to list</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
