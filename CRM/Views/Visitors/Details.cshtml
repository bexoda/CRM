@model CRM.Entities.Visitor

@{
    ViewData["Title"] = "Details";
}


<div class="card bg-light-info shadow-none position-relative overflow-hidden">
    <div class="card-body px-4 py-3">
        <div class="row align-items-center">
            <div class="col-9">
                <h4 class="fw-semibold mb-8">Visitor Details</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a class="text-muted" asp-controller="Visitors" asp-action="Index">Visitor</a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">Visitor Details</li>
                    </ol>
                </nav>
            </div>
            <div class="col-3">
                <div class="text-center mb-n5">
                    <img src="~/dist/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="px-4 py-3 border-bottom">
                <h5 class="card-title fw-semibold mb-0">Visitor's Details'</h5>
            </div>
            <div>
                <input type="hidden" asp-for="Id" />
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label asp-for="Name" class="form-label fw-semibold">Name</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="John" disabled>
                            </div>
                            <div class="mb-4">
                                <label asp-for="ContactNumber" class="form-label fw-semibold">Contact Number</label>
                                <input type="text" class="form-control" asp-for="ContactNumber" placeholder="1234567890" disabled>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                                <input type="email" class="form-control" asp-for="Email" placeholder="example@gmail.com" disabled>
                            </div>
                            <div class="mb-4">
                                <label asp-for="PurposeOfVisit" class="form-label fw-semibold">Purpose of Visit</label>
                                <textarea class="form-control" asp-for="PurposeOfVisit" placeholder="Type here ..." disabled></textarea>
                            </div>
                            <div class="mb-4">
                                <label asp-for="CreatedDate" class="form-label fw-semibold">Date Created</label>
                                <input type="datetime-local" class="form-control" asp-for="CreatedDate" disabled>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label asp-for="CheckInTime" class="form-label fw-semibold">Check-In Time</label>
                                <input type="datetime-local" class="form-control" asp-for="CheckInTime" disabled>
                            </div>
                            <div class="mb-4">
                                <label asp-for="CheckOutTime" class="form-label fw-semibold">Check-Out Time</label>
                                <input type="datetime-local" class="form-control" asp-for="CheckOutTime" disabled>
                            </div>
                            <div class="mb-4">
                                <label asp-for="HostId" class="form-label fw-semibold">Host</label>
                                @if (ViewData["HostName"] != null)
                                {
                                    <input type="text" class="form-control" value="@ViewData["HostName"]" disabled>
                                    <input type="text" asp-for="HostId" value="@ViewData["HostId"]" hidden>
                                }
                                else
                                {
                                    <input type="text" class="form-control" value="No host assigned" disabled>
                                }
                            </div>
                            <div class="mb-4">
                                <label asp-for="BadgeId" class="form-label fw-semibold">Badge Id</label>
                                <input type="text" asp-for="BadgeId" class="form-control" placeholder="Badge Number" disabled>
                            </div>

                            <div class="mb-4">
                                <label asp-for="UpdatedDate" class="form-label fw-semibold">Date Updated</label>
                                <input type="datetime-local" class="form-control" asp-for="UpdatedDate" disabled>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex align-items-center gap-3">
                                <a class="btn btn-primary" type="submit" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                                <a class="btn btn-light-danger text-danger" asp-action="Index">Back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


