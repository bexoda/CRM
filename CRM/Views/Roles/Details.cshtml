@model CRM.Models.RolesViewModel
@{
    ViewData["Title"] = "Details";
}



<div class="card bg-light-info shadow-none position-relative overflow-hidden">
    <div class="card-body px-4 py-3">
        <div class="row align-items-center">
            <div class="col-9">
                <h4 class="fw-semibold mb-8">Role Details</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a class="text-muted" asp-controller="Visitors" asp-action="Index">Roles</a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">Role Details</li>
                    </ol>
                </nav>
            </div>
            <div class="col-3">
                <div class="text-center mb-n5">
                    <img src="~/dist/images/breadcrumb/ChatBc.png" alt="" class="img-fluid mb-n4">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="px-4 py-3 border-bottom">
                <h5 class="card-title fw-semibold mb-0">Role's Details'</h5>
            </div>
            <div>
              
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label asp-for="RoleName" class="form-label fw-semibold">Name</label>
                                <input type="text" class="form-control" asp-for="RoleName"  disabled>
                            </div>
                          
                        </div>
                     
                        <div class="col-12">
                            <div class="d-flex align-items-center gap-3">
                                <a class="btn btn-primary" type="submit" asp-action="Edit" asp-route-id="@Model?.RoleId">Edit</a>
                                <a class="btn btn-light-danger text-danger" asp-action="Index">Back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
